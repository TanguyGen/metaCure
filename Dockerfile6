FROM rocker/shiny:4.1.0 AS init

RUN mkdir /build_zone && mkdir -p /dataPackagesOutput/emlassemblyline
ADD . /build_zone
WORKDIR /build_zone



# FROM init AS install_system_deps

COPY packages.txt packages.txt
RUN apt update --fix-missing -y \
&& apt upgrade -y
RUN xargs apt-get install -y -f --allow-downgrades -o APT::Get::Fix-Missing=true <packages.txt
RUN apt clean \
&& rm -rf /var/lib/apt/lists/*



# FROM install_system_deps AS install_R_deps

RUN echo "options(repos = c(CRAN = 'https://cran.rstudio.com/'), download.file.method = 'libcurl')" >> /usr/local/lib/R/etc/Rprofile.site
RUN R -e 'install.packages("remotes", version = "2.4.2")' \
&& R -e 'remotes::install_version("renv", upgrade="never", version = "0.15.5")'
COPY renv.lock renv.lock
ENV RENV_PATHS_LIBRARY renv/library
RUN R -e 'renv::restore()'



# FROM install_R_deps AS install_github_deps

##RUN R -e 'remotes::install_github("EDIorg/EMLassemblyline", ref = "v3.5.2")'
## From local EAL version
RUN R -e 'remotes::install_local("EAL_PNDB.tar.gz",, upgrade="never")'
RUN R -e 'remotes::install_github("earnaud/SummeRnote")'
RUN R -e 'remotes::install_github("ropensci/bibtex")'


# FROM install_github_deps AS install_metashark

RUN Rscript -e 'remotes::install_version("DT",upgrade="never", version = "0.15")'
RUN Rscript -e 'remotes::install_github("earnaud/cedarr", dependencies = TRUE)'
RUN Rscript -e 'remotes::install_version("DataEditR", upgrade="never", version = "0.1.5", dependencies = TRUE)'
RUN R -e 'install.packages("leaflet.extras", upgrade="never", version = "1.0.0", dependencies = TRUE)'

#RUN R -e 'remotes::install_local(dir(".", pattern = "MetaShARK_.*\\.tar.gz"), upgrade="never")'
RUN R -e 'remotes::install_local("MetaShARK_1.7.3.tar.gz",, upgrade="never")'


# FROM install_metashark AS run_metashark

EXPOSE 3838
CMD R -e "options('shiny.port'=3838,'shiny.host'='0.0.0.0'); MetaShARK::runMetashark(dev=FALSE)"
